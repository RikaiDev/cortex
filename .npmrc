# This file prevents bypassing the release workflow

# Block direct npm version commands
# These must go through release:check -> release:patch/minor/major
npm-version-hook=scripts/protect-release.cjs

# Block direct npm publish
# Must go through prepublishOnly -> release:check
npm-publish-hook=scripts/protect-release.cjs

# Show warnings for dangerous commands
audit=false
fund=false

{
  "name": "@rikaidev/cortex",
  "version": "0.3.1",
  "description": "Cortex AI - AI Collaboration Brain with real-time preference learning and structured thinking",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cortex": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "start": "bun run dist/index.js",
    "cli": "bun run dist/cli/index.js",
    "postinstall": "bun run build",
    "cortex:start": "node dist/cli/index.js start",
    "cortex:generate-ide": "node dist/cli/index.js generate-ide",
    "cortex:init": "node dist/cli/index.js init",
    "release:check": "chmod +x scripts/release-check.sh && ./scripts/release-check.sh",
    "release:prepare": "npm run release:check && git add . && git commit -m 'feat: release v$(node -p \"require('./package.json').version\")' && git tag v$(node -p \"require('./package.json').version\")",
    "release:publish": "npm run release:prepare && git push origin main --tags"
  },
  "keywords": [
    "ai",
    "collaboration",
    "prompt-injection",
    "preference-learning",
    "structured-thinking",
    "development-workflow",
    "cortex-ai",
    "real-time-learning",
    "cross-platform-ai"
  ],
  "author": "RikaiDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RikaiDev/cortex.git"
  },
  "bugs": {
    "url": "https://github.com/RikaiDev/cortex/issues"
  },
  "homepage": "https://github.com/RikaiDev/cortex",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "typescript": "^5.0.0",
    "commander": "^11.0.0",
    "chalk": "^5.0.0",
    "inquirer": "^9.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^10.0.0",
    "marked": "^5.0.0",
    "gray-matter": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/marked": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "bun-types": "latest"
  }
}

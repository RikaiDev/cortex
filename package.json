{
  "name": "@rikaidev/cortex",
  "version": "0.8.4",
  "description": "Cortex AI - AI Collaboration Brain with real-time preference learning and structured thinking",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cortex": "cortex/cli/index.js",
    "cortex-mcp": "cortex/core/mcp/server.js"
  },
  "scripts": {
    "build": "npm run release:deps && npm run lint && tsc",
    "prepublishOnly": "npm run build && npm run test:all && node scripts/prepublish-check.cjs",
    "dev": "tsc --watch",
    "clean": "rm -rf cortex",
    "prebuild": "npm run clean",
    "postbuild": "chmod +x cortex/cli/index.js",
    "test": "echo 'No specific unit tests configured'",
    "test:cli": "tsx test/cli-integration.test.ts",
    "test:mcp": "tsx test/mcp-server-integration.test.ts",
    "test:all": "npm run test && npm run test:cli && npm run test:mcp",
    "lint": "node scripts/code-quality-check.js",
    "lint:fix": "node scripts/code-quality-check.js --fix",
    "lint:verbose": "node scripts/code-quality-check.js --verbose",
    "lint:future": "node scripts/future-vars-check.js",
    "lint:future:fix": "node scripts/future-vars-check.js --fix",
    "lint:future:verbose": "node scripts/future-vars-check.js --verbose",
    "security": "secretlint \"**/*\" --maskSecrets",
    "security:fix": "secretlint \"**/*\" --maskSecrets --format=mask-result --output",
    "quality": "npm run lint && npm run security",
    "release:check": "./scripts/release-check.sh",
    "release:deps": "node scripts/dependency-check.js",
    "release:dry-run": "./scripts/release.sh --dry-run",
    "release:current": "./scripts/release.sh current",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release:unpublish": "./scripts/release.sh unpublish",
    "unpublish:version": "echo \"Usage: npm unpublish @rikaidev/cortex@VERSION\"",
    "install:global-mcp": "cortex install-global-mcp"
  },
  "keywords": [
    "ai",
    "collaboration",
    "prompt-injection",
    "preference-learning",
    "structured-thinking",
    "development-workflow",
    "cortex-ai",
    "real-time-learning",
    "cross-platform-ai"
  ],
  "author": "RikaiDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RikaiDev/cortex.git"
  },
  "bugs": {
    "url": "https://github.com/RikaiDev/cortex/issues"
  },
  "homepage": "https://github.com/RikaiDev/cortex",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^10.0.0",
    "gray-matter": "^4.0.0",
    "inquirer": "^9.0.0",
    "marked": "^5.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-filter-comments": "^11.2.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.0",
    "@types/chai": "^5.2.2",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/marked": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^5.2.1",
    "eslint": "^8.0.0",
    "mocha": "^11.7.1",
    "prettier": "^3.0.0",
    "secretlint": "^11.2.0",
    "tsx": "^4.20.3"
  }
}

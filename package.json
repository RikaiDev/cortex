{
  "name": "@rikaidev/cortex",
  "version": "0.11.2",
  "description": "Cortex AI - AI Collaboration Brain with real-time preference learning and structured thinking",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cortex": "dist/cli/index.js",
    "cortex-mcp": "scripts/mcp-server.js"
  },
  "scripts": {
    "mcp": "node scripts/mcp-server.js",
    "mcp:debug": "node --inspect scripts/mcp-server.js --debug",
    "mcp:dev": "node scripts/mcp-server.js --dev",
    "demo:multi-role": "node examples/integrated-multi-role-demo.js",
    "build": "npm run knip || exit 1; tsc || exit 1",
    "dev": "tsc --watch",
    "clean": "rm -rf .cortex",
    "test": "echo 'No specific unit tests configured'",
    "test:cli": "tsx test/cli-integration.test.ts",
    "test:mcp": "tsx test/mcp-server-integration.test.ts",
    "test:all": "npm run test && npm run test:cli && npm run test:mcp",
    "lint": "npm run quality -- --fix",
    "quality": "node scripts/quality-check.js",
    "knip": "knip",
    "release:patch": "node scripts/publish-workflow.cjs patch",
    "release:minor": "node scripts/publish-workflow.cjs minor",
    "release:major": "node scripts/publish-workflow.cjs major",
    "unpublish": "./scripts/release.sh unpublish"
  },
  "keywords": [
    "ai",
    "collaboration",
    "prompt-injection",
    "preference-learning",
    "structured-thinking",
    "development-workflow",
    "cortex-ai",
    "real-time-learning",
    "cross-platform-ai"
  ],
  "author": "RikaiDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RikaiDev/cortex.git"
  },
  "bugs": {
    "url": "https://github.com/RikaiDev/cortex/issues"
  },
  "homepage": "https://github.com/RikaiDev/cortex",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "typescript": "^5.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/fs-extra": "^11.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^5.2.1",
    "eslint": "^8.0.0",
    "knip": "^5.64.1",
    "mocha": "^11.7.1",
    "tsx": "^4.20.3"
  }
}

{
  "mcpServers": {
    "cortex-mcp-server": {
      "command": "node",
      "args": ["cortex/core/mcp-server.js"],
      "timeout": 600,
      "env": {
        "NODE_ENV": "production",
        "MCP_DEBUG": "false"
      },
      "autoApprove": [
        "intent-analyzer",
        "task-decomposer", 
        "role-selector",
        "experience-recorder"
      ]
    }
  }
} 